{
	"name": "rak-gaming-updater",
	"description": "Rak Gaming Updater Application",
	"version": "1.4.0",
	"author": {
		"name": "m33shoq"
	},
	"main": "./src/main.js",
	"scripts": {
		"start": "electron .",
		"server": "server.sh",
		"build": "electron-builder",
		"publish": "electron-builder --publish always"
	},
	"build": {
		"appId": "com.rak-gaming-updater",
		"productName": "Rak Gaming Updater",
		"directories": {
			"output": "dist"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "m33shoq",
				"repo": "RakGamingUpdater-Releases",
				"releaseType": "release"
			}
		],
		"files": [
			"src",
			"package.json",
			"node_modules"
		],
		"extraResources": [
			{
				"from": "./node_modules/regedit/vbs",
				"to": "vbs"
			}
		],
		"win": {
			"target": "nsis",
			"icon": "./src/taskbaricon.png"
		},
		"nsis": {
			"deleteAppDataOnUninstall": true
		}
	},
	"dependencies": {
		"abort-controller": "^3.0.0",
		"adm-zip": "^0.5.14",
		"archiver": "^7.0.1",
		"cors": "^2.8.5",
		"crc": "^4.3.2",
		"dotenv": "^16.4.5",
		"electron-log": "^5.1.5",
		"electron-store": "^10.0.0",
		"electron-updater": ">=6.3.0-alpha.6",
		"extract-zip": "^2.0.1",
		"fs": "^0.0.1-security",
		"i18n": "^0.15.1",
		"jwt-decode": "^4.0.0",
		"node-fetch": "^3.3.2",
		"path": "^0.12.7",
		"regedit": "^5.1.3",
		"socket.io-client": "^4.7.5",
		"validator": "^13.12.0"
	},
	"devDependencies": {
		"electron": "^31.0.2",
		"electron-builder": "^24.13.3"
	}
}
