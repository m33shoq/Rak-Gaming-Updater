{
	"name": "rak-gaming-updater",
	"description": "Rak Gaming Updater Application",
	"version": "1.6.0",
	"author": {
		"name": "m33shoq"
	},
	"main": "./dist/out-tsc/src/main.js",
	"scripts": {
		"cmp": "rimraf dist/out-tsc && npx tsc && copyfiles -V -u 1 \"app/**/*\" -e \"**/*.ts\" dist/out-tsc && echo \"Compiled to dist/out-tsc\"",
		"prestart": "npm run cmp",
		"start": "electron .",
		"server": "server.sh",
		"prebuild": "npm run cmp",
		"build": "electron-builder",
		"publish": "electron-builder --publish always"
	},
	"build": {
		"appId": "com.rak-gaming-updater",
		"productName": "Rak Gaming Updater",
		"directories": {
			"output": "./dist/releases"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "m33shoq",
				"repo": "RakGamingUpdater-Releases",
				"releaseType": "release"
			}
		],
		"files": [
			"./dist/out-tsc/"
		],
		"extraResources": [
			{
				"from": "./node_modules/regedit/vbs",
				"to": "vbs"
			}
		],
		"win": {
			"target": "nsis",
			"icon": "./app/assets/taskbaricon.png"
		},
		"nsis": {
			"deleteAppDataOnUninstall": true
		}
	},
	"dependencies": {
		"abort-controller": "^3.0.0",
		"adm-zip": "^0.5.14",
		"archiver": "^7.0.1",
		"cors": "^2.8.5",
		"crc": "^4.3.2",
		"dotenv": "^16.4.5",
		"electron-log": "^5.1.5",
		"electron-store": "^8.2.0",
		"electron-updater": ">=6.3.0-alpha.6",
		"extract-zip": "^2.0.1",
		"fs": "^0.0.1-security",
		"jwt-decode": "^4.0.0",
		"node-fetch": "^3.3.2",
		"path": "^0.12.7",
		"regedit": "^5.1.3",
		"socket.io-client": "^4.7.5",
		"typescript": "^5.8.3",
		"validator": "^13.12.0"
	},
	"devDependencies": {
		"@types/archiver": "^6.0.3",
		"@types/electron-store": "^1.3.1",
		"@types/node": "^22.15.30",
		"@types/validator": "^13.15.1",
		"copyfiles": "^2.4.1",
		"electron": "^31.0.2",
		"electron-builder": "^24.13.3",
		"rimraf": "^6.0.1"
	}
}
