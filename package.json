{
	"name": "rak-gaming-updater",
	"description": "Rak Gaming Updater Application",
	"version": "2.0.0",
	"author": {
		"name": "m33shoq"
	},
	"main": "./dist/main.mjs",
	"type": "module",
	"scripts": {
		"app:dev": "vite",
		"app:build": "vue-tsc && vite build && electron-builder",
		"app:preview": "vue-tsc && vite build && electron .",
		"app:dev?": "npm run cmp && concurrently vite \" electron .\" \"tsc -w\"",
		"cmp": "rimraf dist/ && tsc && copyfiles -V -u 1 \"app/**/*\" -e \"**/*.ts\" dist/ && echo \"Compiled to dist/\"",
		"prestart": "npm run cmp",
		"start": "electron .",
		"server": "server.sh",
		"prebuild": "npm run cmp",
		"build": "electron-builder",
		"publish": "electron-builder --publish always"
	},
	"build": {
		"appId": "com.rak-gaming-updater",
		"productName": "Rak Gaming Updater",
		"directories": {
			"output": "./releases/${version}"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "m33shoq",
				"repo": "RakGamingUpdater-Releases",
				"releaseType": "release"
			}
		],
		"files": [
			"./dist/"
		],
		"extraResources": [
			{
				"from": "./node_modules/regedit/vbs",
				"to": "vbs"
			}
		],
		"win": {
			"target": "nsis",
			"icon": "./app/assets/taskbaricon.png"
		},
		"nsis": {
			"deleteAppDataOnUninstall": true
		}
	},
	"dependencies": {
		"abort-controller": "^3.0.0",
		"archiver": "^7.0.1",
		"crc": "^4.3.2",
		"dotenv": "^16.4.5",
		"electron-log": "^5.1.5",
		"electron-store": "^8.2.0",
		"extract-zip": "^2.0.1",
		"jwt-decode": "^4.0.0",
		"regedit": "^5.1.3",
		"socket.io-client": "^4.7.5",
		"validator": "^13.12.0"
	},
	"devDependencies": {
		"@types/archiver": "^6.0.3",
		"@types/electron-store": "^1.3.1",
		"@types/node": "^22.15.30",
		"@types/validator": "^13.15.1",
		"@vitejs/plugin-vue": "^5.2.4",
		"concurrently": "^9.1.2",
		"copyfiles": "^2.4.1",
		"electron": "^31.0.2",
		"electron-builder": "^24.13.3",
		"electron-updater": "^6.6.2",
		"pinia": "^3.0.3",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-plugin-electron": "^0.29.0",
		"vite-plugin-electron-renderer": "^0.14.6",
		"vite-plugin-vue-devtools": "^7.7.6",
		"vue-router": "^4.5.1",
		"vue-tsc": "^2.2.10"
	}
}
