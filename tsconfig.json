{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist/out-tsc",
    "rootDir": "app",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,

    // only these two
    "types": ["node", "electron"],

    // optional but highly recommended to avoid issues in other libs
    "skipLibCheck": true
  },
  "include": ["app/src/*"]
}
