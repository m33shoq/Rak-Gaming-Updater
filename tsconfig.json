{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"outDir": "dist/",
		"baseUrl": ".",
		"paths": {
			"@/*": ["app/*"]
		}
	},
	"include": ["app/**/*.ts", "app/**/*.d.ts", "app/**/*.vue", "shims-assets.d.ts"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
